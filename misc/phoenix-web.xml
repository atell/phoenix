<?xml version="1.0"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<filter>
		<filter-name>alpacaFilter</filter-name>
		<filter-class>com.dianping.alpaca.client.FirewallFilter</filter-class>
		<init-param>
			<param-name>_INDEX_</param-name>
			<param-value>+org.springframework.web.filter.CharacterEncodingFilter</param-value>
    </init-param> 
	</filter>

	<filter-mapping>
		<filter-name>alpacaFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> 
</web-app>
