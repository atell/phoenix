<plexus>
	<components>
		<component>
			<role>org.codehaus.plexus.logging.LoggerManager</role>
			<implementation>com.site.lookup.logger.TimedConsoleLoggerManager</implementation>
			<configuration>
				<dateFormat>MM-dd HH:mm:ss.SSS</dateFormat>
				<showClass>true</showClass>
				<logFilePattern>/data/applogs/phoenix/cat_phoenix.log.{0,date,yyyy-MM-dd}</logFilePattern>
			</configuration>
		</component>
	</components>
</plexus>